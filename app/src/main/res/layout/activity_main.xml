<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:app="http://schemas.android.com/apk/res-auto"
xmlns:tools="http://schemas.android.com/tools"
android:layout_width="match_parent"
android:layout_height="match_parent"
tools:context="com.soruco.bruno.tesisv1.MainActivity">

<Button
    android:id="@+id/btn_todoe"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_alignParentStart="true"
    android:layout_centerVertical="true"
    android:layout_marginStart="40dp"
    android:onClick="encender"
    android:text="Encender" />

<Button
    android:id="@+id/btn_todoa"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_alignBaseline="@+id/btn_todoe"
    android:layout_alignBottom="@+id/btn_todoe"
    android:layout_alignParentEnd="true"
    android:layout_marginEnd="47dp"
    android:onClick="apagar"
    android:text="Apagar" />

</RelativeLayout>